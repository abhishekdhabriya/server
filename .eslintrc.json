{
    "extends" : "eslint:recommended",
    "env": {
        "browser": true,
        "commonjs": true,
        "node": true,
        "es6": true
    },
    "parser":"babel-eslint",
    "rules": {
        "semi" : ["error", "always"],
        "no-console": "off"
    },
    "globals": { // we define global variables which eslint shouldn't complain if eslint can't find the references.
        "console": false,
        "process": false,
        "IS_PRODUCTION": false,
        "IS_DEVELOPMENT": false
    }
}